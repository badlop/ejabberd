{
        // Use IntelliSense to learn about possible attributes.
        // Hover to view descriptions of existing attributes.
        // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
        "version": "0.2.0",
        "configurations": [
                {
                        "name": "Compile & Start",
                        "type": "erlang",
                        "request": "launch",
                        "runinterminal": [
                                "make",
                                "relive"
                        ],
                        "projectnode": "ejabberd@localhost",
                        "cookie": "COOKIE",
                        "timeout": 300,
                        "cwd": "${workspaceRoot}"
                },
                {
                        "name": "Compile & Start (alternate)",
                        "type": "erlang",
                        "request": "launch",
                        "runinterminal": [
                                "./rebar3",
                                "shell",
                                "--apps",
                                "ejabberd",
                                "--config",
                                "rel/relive.config",
                                "--script",
                                "rel/relive.escript",
                                "--name",
                                "ejabberd@localhost",
                                "--setcookie",
                                "COOKIE"
                        ],
                        "projectnode": "ejabberd@localhost",
                        "cookie": "COOKIE",
                        "timeout": 300,
                        "cwd": "${workspaceRoot}"
                },
                {
                        "name": "Attach to Existing",
                        "type": "erlang",
                        "request": "attach",
                        "runinterminal": [
                                "./rebar3",
                                "shell",
                                "--sname",
                                "clean@localhost",
                                "--setcookie",
                                "COOKIE",
                                "--start-clean"
                        ],
                        "projectnode": "ejabberd@localhost",
                        "cookie": "COOKIE",
                        "timeout": 300,
                        "cwd": "${workspaceRoot}"
                }
        ]
}
